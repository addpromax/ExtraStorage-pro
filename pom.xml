        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

		<core.version>4.7.6</core.version>
		<topper.version>4.13.1</topper.version>
		<minelib.version>1.2.5</minelib.version>
		<spigot.version>1.20-R0.1-SNAPSHOT</spigot.version>
		<authlib.version>5.0.47</authlib.version>
		<bstats.version>3.0.2</bstats.version>
		<headdatabase.version>1.3.1</headdatabase.version>
		<vault.version>1.7.1</vault.version>
		<shopgui.version>3.0.0</shopgui.version>
		<economyshopgui.version>1.7.0</economyshopgui.version>
		<playerpoints.version>3.2.6</playerpoints.version>
		<tokenmanager.version>3.2.4</tokenmanager.version>
		<ultraeconomy.version>1.1.2</ultraeconomy.version>
		<coinsengine.version>2.4.1</coinsengine.version>
		<placeholderapi.version>2.11.5</placeholderapi.version>
		<wildstacker.version>2025.2</wildstacker.version>
		<ultimatestacker.version>1.0.0-20240329.173606-35</ultimatestacker.version>
